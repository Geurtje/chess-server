			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"// update the collection variable `game_id` with the id of the newly created game\r",
							"pm.collectionVariables.set(\"game_id\", pm.response.json().id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "http://{{host}}/chess/game/create",
					"protocol": "http",
					"host": [
						"{{host}}"
					],
					"path": [
						"chess",
						"game",
						"create"
					]
				}
			},
			"response": []
		},
		{
